          <div class="tab-pane" id="dogs" role="tabpanel" href="#dogs" >

            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
              <h1 class="h2">My Dogs</h1>
              <button class="btn  btn-secondary" data-toggle="modal" data-target="#adddog">
                <span data-feather="plus-circle"></span>
                Add a dog
              </button>
            </div>

            <div class="modal fade" id="adddog" tabindex="-1" role="dialog" >
              <div class="modal-dialog  modal-lg" role="document">
                <div class="modal-content">

                  <div class="modal-header">
                    <h4 class="modal-title">Add a new dog</h4>
                    <button type="button" class="close" data-dismiss="modal" >
                      <span >&times;</span>
                    </button>
                  </div>

                  <div class="modal-body">
                    <form class="needs-validation" novalidate method="POST" action=<%= "/dogs/add/"+userid %>>
                      <div class="form-group">
                        <label for="name" class="col-form-label">Name:</label>
                        <input type="text" class="form-control" name='name' required>
                        <div class="invalid-feedback">Valid name is required</div>
                      </div>
                      <div class="form-group">
                        <label for="name" class="col-form-label">Breed:</label>
                        <input type="text" class="form-control" name='breed' required>
                        <div class="invalid-feedback">Valid breed is required</div>
                      </div>
                      <div class="form group">
                        <label for="name" class="col-form-label">Date of birth:</label>
                        <input type="date" class="form-control" name='dob' required>
                        <div class="invalid-feedback">Valid date is required</div>
                      </div>
                      <br>
                    
                  </div>
                  <div class="modal-footer">
                    <div class="container">
                      <div class="row">
                        <div class="col">
                          <button type="button" class="btn btn-secondary btn-block" data-dismiss="modal">Close</button>
                        </div>
                        <div class="col">
                          <button class="btn btn-primary btn-block" type="submit" id="add">add</button>
                        </div>
                      </div>
                    </div>                         
                  </div>
                  </form>
                  
                </div>
              </div>
            </div>

            <div class="album py-5 bg-light"> <div class="container">
              <div class="row">
              <% dogs.forEach(function(dogs){ %>
                <div class="col-md-4">           
                  <div class="card mb-4 box-shadow">
                    <div class="card-body">
                      <div class='row'>                
                        <div class="col-md-5">Name</div>
                        <div class="col-md-7"><%= dogs.name %></div>  
                      </div>
                      <br>
                      <div class='row'>                
                        <div class="col-md-5">Breed</div>
                        <div class="col-md-7"><%= dogs.breed %></div>  
                      </div>
                      <br>
                      <div class='row'>                
                        <div class="col-md-5">Date of birth</div>
                        <div class="col-md-7"><%= dogs.dob %></div>  
                      </div>      
                      <br>                 
                      <div class="d-flex justify-content-between align-items-center">                                                 
                        <button type="button" class="btn btn-sm btn-outline-secondary" data-toggle="modal" data-target=<%="#editdog"+dogs.id %>>
                          <span data-feather="edit-2"></span>Edit
                        </button>                                             
                        <button type="button" class="btn btn-sm btn-outline-secondary" data-toggle="modal" data-target=<%="#deletedog"+dogs.id %>>
                          <span data-feather="x"></span>Delete
                        </button>

                        <% include deletedog %>
                        <% include editdog %>                             
                      </div>
                    </div>
                  </div>                  
                </div>
                <% }) %>            
              </div>
            </div> </div>
          </div>