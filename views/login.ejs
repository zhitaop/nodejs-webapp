<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="https://getbootstrap.com/favicon.ico">

    <title>Login Page</title>

    <!-- Bootstrap core CSS -->
    <link href="https://getbootstrap.com/docs/4.1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="https://getbootstrap.com/docs/4.1/examples/sign-in/signin.css" rel="stylesheet">
  </head>

  <body class="text-center">
    
    <form class="form-signin" method="POST" action="/login">
      <img src="logo.jpg" alt="Happy Dog Grooming" style="">
      <h1 class="h1 mb-3 font-weight-normal">Log In</h1>
      <p style="font-size:14px;">New to Happy Dog Grooming? <a href="/">Sign up</a></p>
      <%if (error==='success'){ %>
        <div class="alert  alert-success">You have successfully signed up, now you can log in using your credentials</div>
      <% } %>
      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="email" id="inputEmail" class="form-control" placeholder="Email address" name='email' required autofocus>
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" id="inputPassword" class="form-control" name='password' placeholder="Password" required>
      <%if (error==='email'){ %>
        <div class="alert  alert-danger">Incorrect email address</div>
      <% } %>
      <%if (error==='password'){ %>
        <div class="alert  alert-danger">Incorrect password</div>
      <% } %>
      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>
      <p class="mt-5 mb-3 text-muted">&copy; 2017-2018 Happy Dog Grooming</p>
    </form>
  </body>
</html>